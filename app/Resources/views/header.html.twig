<header id="header">

    {% if is_mobile() %}
        <div uk-grid class="uk-grid-collapse mobile_header  " uk-sticky>



                <div class="uk-width-auto uk-flex uk-flex-middle">
                    <button uk-icon="icon:menu" class="uk-button uk-button-small c_grey" uk-toggle="target: #left_bar"></button>
                </div>

                <div class="uk-width-auto uk-flex uk-flex-middle">
                    <a href="/" class="uk-display-block" style="line-height: 10px"><img class="logo" src="/assets/images/interface/logo.svg" alt=""></a>
                </div>

                <div class="uk-width-expand uk-flex uk-flex-middle">
                    &nbsp;
                </div>

                <div class="uk-width-auto uk-flex uk-flex-middle">
                    {% if not app.session.has('logged_user') and not app.session.has('admin')%}
                        <a uk-toggle="target: #sign_in" class="c_grey" style="padding-right:20px;">
                            <i uk-icon="icon: user"></i>
                        </a>
                    {% else %}
                        <a href="/profile" class="c_grey" style="padding-right:20px;">
                            <i uk-icon="icon: user"></i>
                        </a>
                    {% endif %}
                </div>

                <div class="uk-width-auto uk-flex uk-flex-middle">
                    <a href="/card/new" class="c_grey" style="padding-right:10px;">
                        <i uk-icon="icon: plus-circle"></i>
                    </a>
                </div>

                <div class="uk-width-auto uk-flex uk-flex-middle">
                    <div class="search_popup_trigger">
                        <i uk-icon="icon: search"></i>
                    </div>
                    {{ include('search_popup.html.twig') }}
                </div>


        </div>
    {% endif %}

    <div class="top_sticky desktop_header uk-hidden\@s" uk-sticky>

        <div class="standard_wide header_inner">
            <div class="uk-grid uk-height-1-1">
                <div class="uk-width-1-3">
                    <div class="uk-grid uk-grid-small uk-height-1-1">
                        <div class="uk-width-auto uk-flex uk-flex-middle">
                            <a href="/" class="uk-display-block" style="line-height: 10px"><img class="logo" src="/assets/images/interface/logo.svg" alt=""></a>
                        </div>
                        <div class="uk-width-expand uk-flex uk-flex-middle">
                            {#<i uk-icon="icon:search"></i> <input class="glob_search" type="text" name="glob_search" placeholder="Поиск">#}
                            <div class="uk-inline uk-width-1-1 uk-position-relative">
                                {#<a class="uk-form-icon search_popup_trigger" href="#" uk-icon="icon: search"></a>#}
                                {#<input class="uk-input glb search_popup_trigger" name="glob_search" placeholder="{% trans %}Поиск, например: bmw{% endtrans %}">#}
                                {#<input class="uk-input glb search_popup_trigger" name="" placeholder="{% trans %}Поиск, например: bmw{% endtrans %}">#}

                                <div class="search_popup_trigger">
                                    <i uk-icon="icon: search"></i>
                                    <span class="uk-text-small">{% trans %}Поиск{% endtrans %}</span>
                                </div>
                                {{ include('search_popup.html.twig') }}
                            </div>
                        </div>
                    </div>


                </div>
                <div class="uk-width-expand">

                    <div class="uk-height-1-1 uk-grid uk-grid-small uk-flex-right uk-flex uk-flex-middle">

                        {#<div>#}
                            {#<a href="/promo" class="uk-button uk-button-success">Сдать авто</a>#}
                        {#</div>#}

                        <div class="c_grey uk-position-relative">
                            {% if not is_mobile() %}
                            {{ include('selector/global_city_selector.html.twig') }}
                            {% endif %}

                            {% if not app.session.has('not_first_time') %}
                                <div class="city_helper">
                                    We&nbsp;find&nbsp;your&nbsp;city&nbsp;like&nbsp;{{ app.session.get('city').header }}.<br>
                                    You always may change city here.
                                    <div class="city_helper_close"><span uk-icon="icon:close"></span></div>
                                </div>
                            {% endif %}

                        </div>

                        {{ include('user/auth_button_modal.html.twig') }}

                        <div class="uk-height-1-1">
                            {#{% if app.session.has('logged_user') %}#}
                                {#<a href="/card/new" class="uk-button uk-button-success add_card_button">Сдать</a>#}
                            {#{% elseif app.session.has('admin') %}#}
                                {#<a href="/card/new" class="uk-button uk-button-success add_card_button">Сдать</a>#}
                            {#{% else %}#}
                                {#<a uk-toggle="target: #sign_in" class="uk-button uk-button-success add_card_button">Сдать</a>#}
                            {#{% endif %}#}
                            <a href="/card/new" class="add_card_button" title="Добавить транспорт">{% trans %}Сдать{% endtrans %}</a>
                        </div>
                    </div>
                </div>
            </div>

            <div id="search_block" hidden>{{ include('search/top_search.html.twig') }}</div>

        </div>
    </div>




</header>

