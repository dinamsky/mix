{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/main_page/top_slider.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/css/nouislider.css') }}" rel="stylesheet" />
    <link href="{{ asset('assets/css/auto-complete.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('assets/js/mainPage.js') }}"></script>
    <script src="{{ asset('assets/js/city_general_mark_selector.js') }}"></script>
    <script src="{{ asset('assets/js/sliderSettings.js') }}"></script>
    <script src="{{ asset('assets/js/mark_autocomplete.js') }}"></script>
    <script src="{{ asset('assets/js/nouislider.min.js') }}"></script>
    <script src="{{ asset('assets/js/top_price_ranger.js') }}"></script>


{% endblock %}

{% block metaTags %}
    {{ parent() }}
{% endblock %}

{% block title %}paypalSuccess{% endblock %}

{% block bodyVars %}{% endblock %}
{% block bodyClass %}{% endblock %}

{% block content %}

<div class="standard_wide uk-margin-top">
    <h1>Test payment</h1>

    <form action="https://www.sandbox.paypal.com/cgi-bin/websc" method="post">
        <input type="hidden" name="cmd" value="_xclick">
        <input type="hidden" name="business" value="wqs-info@mail.ru">
        <input id="paypalItemName" type="hidden" name="item_name" value="Base tariff">
        <input id="paypalQuantity" type="hidden" name="quantity" value="1">
        <input id="paypalAmmount" type="hidden" name="amount" value="7.0">
        <input type="hidden" name="no_shipping" value="1">
        <input type="hidden" name="return" value="https://mix.rent/paypalSuccess">

        <input type="hidden" name="custom" value="{{ customData }}">

        <input type="hidden" name="currency_code" value="USD">
        <input type="hidden" name="lc" value="US">
        <input type="hidden" name="bn" value="PP-BuyNowBF">

        <button type="submit">
            Pay Now
        </button>
    </form>
</div>










{% endblock %}